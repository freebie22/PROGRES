<Page x:Class="PROGRES.OrderListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PROGRES"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="OrderListPage" IsVisibleChanged="Page_IsVisibleChanged">
    
    <Grid>
        <DataGrid BorderThickness="0" Background="#22224B" Foreground="Black" RowStyle="{DynamicResource DataGridRowStyle1}" ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}" x:Name="DGridOrders" ScrollViewer.CanContentScroll="True" ScrollViewer.HorizontalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Visible" AutoGenerateColumns="False" IsReadOnly="true">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Ідентифікатор" Binding="{Binding Identificator}" Width="*"></DataGridTextColumn>
                <DataGridTextColumn Header="Дата замовлення" Binding="{Binding CreateDate}" Width="150"></DataGridTextColumn>
                <DataGridTextColumn Header="Замовлені товари" Binding="{Binding Shopping_Info}" Width="250"></DataGridTextColumn>
                <DataGridTextColumn Header="Кількість замовленого" Binding="{Binding Outfit_Count}" Width="250"></DataGridTextColumn>
                <DataGridTextColumn Header="Вартість замовлення" Binding="{Binding TotalSum}" Width="250"></DataGridTextColumn>
                <DataGridTextColumn Header="Спосіб оплати" Binding="{Binding Pay_Option}" Width="250"></DataGridTextColumn>
                <DataGridTextColumn Header="Адреса замовлення" Binding="{Binding Adress_Info}" Width="250"></DataGridTextColumn>
                <DataGridTextColumn Header="Прізвище замовника" Binding="{Binding Customer_Surname}" Width="250"></DataGridTextColumn>
                <DataGridTextColumn Header="Ім'я замовника" Binding="{Binding Customer_Name}" Width="250"></DataGridTextColumn>
                <DataGridTextColumn Header="По-батькові замовника" Binding="{Binding Customer_Midname}" Width="250"></DataGridTextColumn>
                <DataGridTextColumn Header="Телефон замовника" Binding="{Binding Customer_Phone}" Width="250"></DataGridTextColumn>
                <DataGridTextColumn Header="Ел.пошта замовника" Binding="{Binding Customer_Email}" Width="250"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Page>
